# Host filesystem path to index
HOST_PATH=/home

# Scan roots inside container (comma-separated)
SCAN_ROOTS=/data

# Root name for multi-mount setups
ROOT_NAME=data

# Stability window in seconds (skip recently modified files)
STABILITY_SEC=30

# Batch size for indexing
BATCH_SIZE=2000

# Manticore data storage path on host
MANTICORE_DATA_PATH=./data/manticore

# Port configurations
MANTICORE_HTTP_PORT=9308
MANTICORE_MYSQL_PORT=9306
API_PORT=8080
WEB_PORT=8081

# API settings
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=500

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO